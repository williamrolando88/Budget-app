<div class='flex flex-col mt-4 gap-2 px-2'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='flex flex-col gap-3'>
    <div class="flex flex-col">
      <%= f.label :full_name, class:'hidden' %>
      <%= f.text_field :full_name, autofocus: true, placeholder: :full_name, class:'px-3 py-2 border bg-white' %>
    </div>

    <div class="flex flex-col">
      <%= f.label :email, class:'hidden' %>
      <%= f.email_field :email, autocomplete: "email", placeholder: :email, class:'px-3 py-2 border bg-white' %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class:'hidden' %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: :password, class:'px-3 py-2 border bg-white' %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, class:'hidden' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password_confirmation, class:'px-3 py-2 border bg-white' %>
      <% if @minimum_password_length %>
      <em class='text-xs pl-1'>Password must contain (<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <%= f.submit "Sign up", class:'py-2 bg-[#5fb523] text-neutral-50 hover:bg-slate-200 active:bg-slate-200 hover:text-neutral-900 active:text-neutral-900 w-full' %>
  </div>
<% end %>
</div>
